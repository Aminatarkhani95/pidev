<form method="post" action="{{ path('categorie_delete', {'id_cat': categorie.id_cat}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ categorie.id_cat) }}">
    <button class="btn">{{ 'delete'|trans }}</button>
</form>